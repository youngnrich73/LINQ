# Base URL used for redirects in magic link emails
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase project credentials
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-public-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Session signing secret (generate a strong random string for production)
AUTH_SECRET=replace-with-a-secure-random-string

# Prisma/PostgreSQL connection string used by the application
DATABASE_URL=postgresql://user:password@localhost:5432/linq
