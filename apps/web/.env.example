# Base URL that should match the domain configured in Google Cloud OAuth client settings
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Google OAuth credentials
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Session signing secret (generate a strong random string for production)
AUTH_SECRET=replace-with-a-secure-random-string

# Prisma/PostgreSQL connection string used by the application
DATABASE_URL=postgresql://user:password@localhost:5432/linq
